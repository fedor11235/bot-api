// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Promocode {
  id         Int      @default(autoincrement()) @id
  value      String?
  discount   Int?     @default(20)
  users_used User[]   @relation("used")
  owner      User     @relation(fields: [owner_id], references: [id])
  owner_id   String
}

model User {
  // id                   Int     @default(autoincrement()) @id
  id                   String      @id
  promocode_used       Promocode[] @relation("used")
  username             String?
  tariffPlan           String      @default("base")
  tariffPlan_temp      String?
  opt_into_temp        String?
  rec_into_temp        String?
  channel_temp         String?
  subscriptionEndDate  String      @default("never")
  createdOpt           Int         @default(0)
  byOpt                Int         @default(0)
  totalSavings         Int         @default(0)
  invitedUsers         Int         @default(0)
  totalEarned          Int         @default(0)
  promocode            Promocode[]
  opt_chanel_create    String?
  opt_into             OptInto[]
  RecommendationInto   RecommendationInto[]
  discount             Int     @default(0)
  //фильтр для категорий
  filter               String? @default("none")
  //фильтр для оптов
  filter_opt            String? @default("none")
  message_mode         String  @default("standart")
  opts                 Opt[]
  channels             UserChanel[]
}

model OptInto {
  id             Int     @default(autoincrement()) @id
  booking_date   String  @default("")
  creatives      String  @default("")
  allowed_dates  String  @default("")
  status         String  @default("created")
  user           User?   @relation(fields: [idUser], references: [id])
  idUser         String?
  opt            Opt?    @relation(fields: [chanel], references: [chanel])
  chanel         String?
  check          String?
  path_check     String?
}

model Opt {
  chanel         String     @id
  title          String?
  category       String?
  retail_price   String?
  wholesale_cost String?
  min_places     String?
  max_places     String?
  booking_date   String  @default("")
  deadline_date  String?
  placement_time String?
  requisites     String?
  status         String  @default("created")
  opt_into       OptInto[]
  user           User?   @relation(fields: [idUser], references: [id])
  idUser         String?
}

model UserChanel {
  id       Int     @default(autoincrement()) @id
  idChanel String
  category String?
  username String?
  title String?
  // link: chanel.link,
  daily_reach Int?
  ci_index Int?
  participants_count Int?
  avg_post_reach Int?
  forwards_count Int?
  user           User?   @relation(fields: [idUser], references: [id])
  idUser         String?
}

model Catalog {
  id          Int     @default(autoincrement()) @id

  category String?
  username String?
  title String?

  link String?

  //количество подписчиков
  participants_count String?
  //охват
  coverage String?
  //цена рекламы
  advertising_price String?
  //рекомендации
  recommendations String?
  //контакты для связи
  communication String?
}

model RecommendationInto {
  id                       Int     @default(autoincrement()) @id
  chanel                   String?
  creatives                String  @default("")
  booking_date             String  @default("")
  allowed_dates            String  @default("")
  status                   String  @default("created")
  user                     User?   @relation(fields: [idUser], references: [id])
  idUser                   String?
  recommendation           Recommendation?    @relation(fields: [username_recommendation], references: [username])
  username_recommendation  String?
  check                    String?
  path_check               String?
}

model Recommendation {
  id                 Int      @default(autoincrement()) @id
  username           String?  @unique()
  title              String?
  price_standart     String?
  price_now          String?
  format             String?
  number_posts       Int?
  coverage           String? @default("?")
  subscribers        String? @default("?")
  // Выбор разрешенных мест
  data_list          String?
  requisites         String?
  deadline           String?
  info               String?
  RecommendationInto RecommendationInto[]
}

